<%= content_for :title do %>
  <%= 'Settings' %>
<% end %>

<div class="row">
  <div class="col-lg-offset-3 col-lg-6 col-md-offset-3 col-md-6 col-sm-offset-2 col-sm-8 col-xs-12">
    <h2>Editar <%= t(resource_name).to_s.humanize %></h2>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <% unless resource.errors.empty? %>
        <div class="alert alert-warning">
          <%= devise_error_messages! %>
        </div>
      <% end %>

      <div class="form-group">
        <%= f.label :first_name %>
        <%= f.text_field :first_name, autofocus: true, placeholder: 'First name', class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.label :last_name %>
        <%= f.text_field :last_name, placeholder: 'Last name', class: 'form-control' %>
      </div>
      
      <div class="form-group">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email" , class: 'form-control' %>
      </div>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
      <% end %>

      <div class="form-group">
        <%= f.label :password %> <i>(déjelo en blanco si no quiere cambiarlo)</i><br />
        <%= f.password_field :password, autocomplete: "off", class: 'form-control' %>
        <% if @minimum_password_length %>
          <br />
          <em>minimo <%= @minimum_password_length %> caracteres</em>
        <% end %>
      </div>

      <div class="form-group">
        <%= f.label :password_confirmation %><br />
        <%= f.password_field :password_confirmation, autocomplete: "off", class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.label :current_password %> <i>(necesitamos su contraseña actual para confirmar sus cambios)</i><br />
        <%= f.password_field :current_password, autocomplete: "off", class: 'form-control' %>
      </div>

      <div class="actions">
        <%= f.submit "Actualizar", class: 'btn btn-primary btn-block' %>
      </div>
    <% end %>

    <h3>Eliminar mi cuenta</h3>

    <p><%= button_to "Eliminar mi cuenta", registration_path(resource_name), 
          data: { confirm: "Estas seguro de querer eliminar tu cuenta?" }, 
          method: :delete, 
          class: 'btn btn-danger btn-lg' %></p>
  </div>
</div>